<h1>Here is a list of all posts by a user</h1>

<div class="user">
  <div class="user--avatar">
    <%=image_tag("https://robohash.org/#{@user.id}.png", class: 'user--avatar', alt: 'user picture')%>
  </div>
  <div class="user--name">
    <%=link_to @user.name, user_path(@user), class: 'name'%>
    <%=link_to "Number of posts: #{@user.postscounter}",          user_posts_path(@user), class: 'posts-num'%>
  </div>
</div>

<div class="blog-post">
  <% @posts.reverse_each do |post| %>
    <%= render partial: "post", locals:{ post: post } %>
  <% end %>
</div>